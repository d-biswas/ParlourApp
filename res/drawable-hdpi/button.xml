<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#70BBE0"
                android:endColor="#B6D4E3"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#A9D0E3" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" android:state_focused="false">
    	<shape>
            <gradient
                android:startColor="#70BBE0"
                android:endColor="#B6D4E3"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#A9D0E3" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item android:state_pressed="false" android:state_focused="true">
    	<shape>
            <gradient
                android:startColor="#B6D4E3"
                android:endColor="#70BBE0"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#A9D0E3" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item android:state_pressed="false" android:state_focused="false">
    	<shape>
            <gradient
                android:startColor="#B6D4E3"
                android:endColor="#70BBE0"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#A9D0E3" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>