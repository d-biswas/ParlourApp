<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <gradient android:startColor="#F0F0F0"
            android:centerColor="#F2F2F2" 
            android:endColor="#FFFFFF"
            android:angle="90" 
            android:centerX="0.5" 
            android:centerY="0.5" />
        <stroke android:width="1dp" 
        		android:color="#A9D0E3" />
        <corners android:radius="5dp" />
        <padding 
        	android:left="10dp" 
        	android:top="5dp" 
        	android:right="10dp"
            android:bottom="5dp" />
    </shape>
</item>
<item android:state_focused="true">
    <shape>
        <gradient android:startColor="#F0F0F0"
            android:centerColor="#F2F2F2" 
            android:endColor="#FFFFFF"
            android:angle="90" 
            android:centerX="0.5" 
            android:centerY="0.5" />
        <stroke android:width="2dp" 
        		android:color="#85BCD7" />
        
        <corners android:radius="4dp" />
        
        <padding android:left="10dp" 
        	android:top="5dp" 
        	android:right="10dp"
            android:bottom="5dp" />
    </shape>
</item>
<item>
    <shape>
        <gradient android:startColor="#F0F0F0"
            android:centerColor="#F2F2F2" 
            android:endColor="#FFFFFF"
            android:angle="90" 
            android:centerX="0.5" 
            android:centerY="0.5" />
        
        <stroke android:width="1dp" 
        		android:color="#A9D0E3" />
        
        <corners android:radius="5dp" />
        
        <padding android:left="10dp" 
        	android:top="5dp" 
        	android:right="10dp"
            android:bottom="5dp" />
    </shape>
</item>

</selector>