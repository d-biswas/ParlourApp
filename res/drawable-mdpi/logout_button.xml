<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FEFEFE" />
            <stroke
                android:width="1dp"
                android:color="#FBFEF3" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FEFEFE"
                android:endColor="#FBFEF3"
                android:angle="270" />
            <stroke
                android:width="1dip"
                android:color="#343D4C" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>